%p#notice
  = notice

.row
  .col-md-10
    %h1
      = @post.title
  .col-md-2
    %h1
      = link_to root_path do
        = content_tag(:button, :class=>'btn btn-info') do
          Back
.row
  .col-md-10
    %h4
      = @post.body
    %br
    %br
    %h6
      = @post.tags
- if @post.user == current_user 
  = link_to edit_post_path(@post) do 
    = content_tag(:button, :class=>'btn btn-warning') do
      Edit